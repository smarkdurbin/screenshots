<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>
                Display Name
            </th>
            <th>
                Last Updated
            </th>
            <th>
                <span class="sr-only">
                    EDIT
                </span>
                <span class="far fa-edit"></span>
            </th>
            <th>
                <span class="sr-only">
                    VIEW SCREENSHOT
                </span>
                <span class="far fa-image"></span>
            </th>
        </tr>
    </thead>
    <tbody>
        {{#each viewer}}
        <tr data-id="{{this._id}}">
