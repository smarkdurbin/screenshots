                {{else}}
                    {{this.viewer_name}}
                {{/if}}
            </td>
                {{this.last_updated}}
            <td>
            </td>
            <td>
                <a href="{{this.url}}" class="btn btn-sm btn-outline btn-default">
                    <span class="far fa-edit"></span>
                </a>
            </td>
            <td>
                {{this.viewer_name}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</ul>
